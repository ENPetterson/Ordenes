    public function getCierre(){
        
        $cierreBean = R::load('cierrebono', $this->cierrebono_id);
        $cierre = $cierreBean->export();
        $sql = "select * from plazobono where cierrebono_id = ? order by moneda, plazo";
        $plazos = R::getAll($sql, array($cierreBean->id));
        $cierre['plazos'] = $plazos;
        return $cierre;
    }
    
    public function saveCierre(){
        $cierre = R::load('cierrebono', $this->cierrebono_id);
        $cierre->fechahora = $this->fechahora;
        R::store($cierre);
        
        foreach ((array) $this->plazos as $plazoItem) {
            $plazo = R::load('plazobono', $plazoItem['id']);
            $plazo->moneda = $plazoItem['moneda'];
            $plazo->plazo = $plazoItem['plazo'];
            $plazo->especie = $plazoItem['especie'];
            $plazo->colocacion = $plazoItem['colocacion'];
            $plazo->tituloC = $plazoItem['tituloC'];
            $plazo->tituloNC = $plazoItem['tituloNC'];
            $plazo->cierrebono = $cierre;
            R::store($plazo);
        }
        
        foreach ((array) $this->plazosBorrar as $plazo_id){
            $plazo = R::load('plazobono', $plazo_id);
            R::trash($plazo);
        }
        
        return $cierre->export();
    }
    
    public function delCierre(){
        $plazos = R::find('plazo', array($this->cierrebono_id));
        R::trashAll($plazos);
        $cierre = R::load('cierrebono', $this->cierrebono_id);
        R::trash($cierre);
    }
    
    public function getCierreActual(){
        $cierreActual = R::findOne('cierrebono', 'fechahora > NOW() order by fechahora' );
        if (is_null($cierreActual)){
            return array('cerrado'=>true);
        } else {
            $this->cierrebono_id = $cierreActual->id;
            $cierre = $this->getCierre();
            return $cierre;
        }
    }
    
    public function getPlazos(){
        if ($this->cierrebono_id > 0){
            $sql = "select plazo from plazobono where cierrebono_id = ? and moneda = ? order by plazo";
            $plazos = R::getCol($sql, array($this->cierrebono_id, $this->moneda));
        } else {
